{
  "name": "unplugin-build-meta",
  "version": "2.0.0",
  "description": "Provide build metadata as a virutal module",
  "type": "module",
  "author": {
    "name": "Lucas Nørgård",
    "email": "lucasnrgaard@gmail.com",
    "url": "https://luxass.dev"
  },
  "packageManager": "pnpm@10.30.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luxass/unplugin-build-meta.git"
  },
  "bugs": "https://github.com/luxass/unplugin-build-meta/issues",
  "keywords": [
    "build-meta",
    "git",
    "sha",
    "unplugin",
    "vite",
    "webpack",
    "rollup",
    "esbuild",
    "nuxt",
    "astro"
  ],
  "workspaces": [
    "playground/*"
  ],
  "exports": {
    ".": "./dist/index.mjs",
    "./astro": "./dist/astro.mjs",
    "./esbuild": "./dist/esbuild.mjs",
    "./farm": "./dist/farm.mjs",
    "./module": "./dist/module.mjs",
    "./nuxt": "./dist/nuxt.mjs",
    "./rolldown": "./dist/rolldown.mjs",
    "./rollup": "./dist/rollup.mjs",
    "./rspack": "./dist/rspack.mjs",
    "./vite": "./dist/vite.mjs",
    "./webpack": "./dist/webpack.mjs",
    "./types": {
      "types": "./types/index.d.ts"
    },
    "./types/*": {
      "types": "./types/*.d.ts"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.mts",
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "prepack": "pnpm run generate-types",
    "build": "tsdown",
    "dev": "tsdown --watch",
    "lint": "eslint .",
    "test": "vitest --run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit && pnpm -r typecheck",
    "play:vite": "pnpm run --filter @unplugin-build-meta/vite dev",
    "play:rspack": "pnpm run --filter @unplugin-build-meta/rspack dev",
    "generate-types": "node scripts/generate-types.js"
  },
  "peerDependencies": {
    "@nuxt/kit": ">=3",
    "@nuxt/schema": ">=3",
    "@rspack/core": "^1.0.13",
    "astro": ">=3",
    "esbuild": "*",
    "rolldown": ">=0.14.0",
    "rollup": ">=3",
    "vite": ">=3",
    "webpack": "^4 || ^5"
  },
  "peerDependenciesMeta": {
    "@nuxt/kit": {
      "optional": true
    },
    "@nuxt/schema": {
      "optional": true
    },
    "astro": {
      "optional": true
    },
    "esbuild": {
      "optional": true
    },
    "rollup": {
      "optional": true
    },
    "vite": {
      "optional": true
    },
    "webpack": {
      "optional": true
    },
    "@rspack/core": {
      "optional": true
    },
    "rolldown": {
      "optional": true
    }
  },
  "dependencies": {
    "git-url-parse": "catalog:prod",
    "simple-git": "catalog:prod",
    "unplugin": "catalog:prod"
  },
  "devDependencies": {
    "@luxass/eslint-config": "catalog:dev",
    "@nuxt/kit": "catalog:dev",
    "@nuxt/schema": "catalog:dev",
    "@rspack/core": "catalog:dev",
    "@types/node": "catalog:dev",
    "esbuild": "catalog:dev",
    "eslint": "catalog:dev",
    "publint": "catalog:dev",
    "rolldown": "catalog:dev",
    "rollup": "catalog:dev",
    "tsdown": "catalog:dev",
    "typescript": "catalog:dev",
    "vite": "catalog:dev",
    "vitest": "catalog:dev",
    "vitest-testdirs": "catalog:dev",
    "webpack": "catalog:dev"
  }
}
